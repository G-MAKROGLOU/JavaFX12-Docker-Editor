<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<AnchorPane prefHeight="120.0" prefWidth="350.0" style="-fx-background-color: #606060; -fx-border-color: white;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="docker_management.DockerfileTemplateFolderName">
    <children>
        <Button layoutX="322.0" layoutY="2.0" mnemonicParsing="false" onAction="#closeStage" style="-fx-background-color: transparent;">
            <graphic>
                <FontIcon iconColor="WHITE" iconLiteral="fa-close" iconSize="17" />
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button layoutX="276.0" layoutY="80.0" mnemonicParsing="false" onAction="#createFolder" style="-fx-background-color: lightgreen;" text="Submit" textFill="WHITE">
            <font>
                <Font name="Trebuchet MS" size="14.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <TextField fx:id="folderNameTextField" layoutX="105.0" layoutY="35.0" prefHeight="25.0" prefWidth="209.0">
            <font>
                <Font name="Trebuchet MS" size="14.0" />
            </font>
        </TextField>
        <Label layoutX="14.0" layoutY="40.0" text="Folder name:" textFill="WHITE">
            <font>
                <Font name="Trebuchet MS" size="14.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
